@model Better4You.UserManagment.Service.Messages.ChangePasswordRequest

<form method="post" id="Account.ChangePassword.Form">
    <section id="User.Create">
        <div class="page-header">
            <ul class="breadcrumb">
                <li>@Html.ActionLink("Users", "Index", "User")<span class="divider">/</span></li>
                <li><span class="active">Create User</span></li>
                <li class="pull-right">
                    @Html.BootstrapAddButton("Create User", "submit")
                    @Html.Mvc().ReturnButton()
                </li>
            </ul>
            <h3>Create User</h3>
        </div>
        @Html.HiddenFor(m=> m.ActivationCode)
        
        <div class="controls controls-row">
            @Html.BootstrapTextBoxFor(m=> m.UserName, new { @class = "span4", required = "required" })
        </div>
        <div class="controls controls-row">
            @Html.BootstrapPasswordFor(m=> m.Password, new { @class = "span4", required = "required" })
        </div>
        <div class="controls controls-row">
            @Html.BootstrapPasswordFor(m=> m.ConfirmPassword, new { @class = "span4", required = "required" })
        </div>
    </section>
</form>