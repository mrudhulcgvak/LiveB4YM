
@model IEnumerable<FoodListItemView>
@{
    ViewBag.Title = "Item Management";
}
<!-- start: PAGE HEADER -->
<div class="row">
	<div class="col-sm-12">
		<!-- start: PAGE TITLE & BREADCRUMB -->
		<ol class="breadcrumb">
			<li>
			    <i class="clip-home-3"></i>
			    <a href="#">
			        Home
			    </a>
			</li>
			<li class="active">
			    Item Management
			</li>
		</ol>
	    <div class="row page-header">
	        <div class="col-sm-6">
	            <h1>
	                @ViewBag.Title
	            </h1>
	        </div>
	        <div class="col-sm-6">
	            <div class="buttons-widget pull-right">
	                <a class="btn btn-md btn-danger" href="@Url.Action("Edit", "Food")">
	                    <i class="fa fa-plus"></i>  Create
	                </a>
	            </div>
	        </div>
	    </div>
	    <!-- end: PAGE TITLE & BREADCRUMB -->
	</div>
</div>
<!-- end: PAGE HEADER -->
<!-- start: PAGE CONTENT -->
<div class="row">
    <div class="col-md-12">
        <form class="form" method="POST">
            <!-- start: RESPONSIVE TABLE PANEL -->
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="fa fa-external-link-square"></i>
                    Search Criteria
                    <div class="panel-tools">
                        <a class="btn btn-xs btn-link panel-collapse collapses" href="#">
                        </a>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="table-responsive">
                                <table class="table table-condensed">
                                    <tr>
                                        <td class="col-sm-3">Item Name</td>
                                        <td>
                                            <input type="text" class="form-control limited" maxlength="50" placeholder="Item Name" title="Item Name" id="Name" name="Name"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            Item Type
                                        </td>
                                        <td>
                                            @Html.DropDownList("FoodTypeId", ((List<Tar.ViewModel.GeneralItemView>) ViewBag.FoodTypes).Select(d => new SelectListItem {Selected = d.Id == 0 ? true : false, Text = d.Text, Value = d.Id.ToString()}).ToList(), new {id = "FoodTypeId", @class = "form-control"})
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="table-responsive">
                                <table class="table table-condensed">
                                    <tr>
                                        <td class="col-sm-3">Display Name</td>
                                        <td>
                                            <input type="text" class="form-control limited" maxlength="50" placeholder="Display Name" title="Display Name" id="DisplayName" name="DisplayName"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="col-sm-3">Portion Size</td>
                                        <td>
                                            <input type="text" class="form-control limited" maxlength="10" placeholder="Portion Size" title="Portion Size" id="PortionSize" name="PortionSize"/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="table-responsive">
                                <table class="table table-condensed">
                                    <tr>
                                        <td><span class="form-control limited" style="visibility: hidden">&nbsp;</span></td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <span class="pull-right">
                                                    <button type="submit" class="btn btn-md btn-blue"><i class="clip-search"></i>  Search</button>
                                                </span>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
        <!-- start: RESPONSIVE TABLE PANEL -->
        <div class="panel panel-default">
            <div class="panel-heading">
                <i class="fa fa-external-link-square"></i>
                Search Result
                <div class="panel-tools">
                    <a class="btn btn-xs btn-link panel-collapse collapses" href="#">
                    </a>
                </div>
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover table-condensed">
                        <thead>
                        <tr>
                            <th class="center">...</th>
                            <th class="center">Type</th>
                            <th class="center">Name</th>
                            <th class="center">Display</th>
                            <th class="center">Portion Size</th>
                            <th class="center">Status</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="center">
                                    <div class="visible-md visible-lg hidden-sm hidden-xs">
                                        <a href="@Url.Action("Edit", "Food", new {Id = item.Id})" class="btn btn-xs btn-teal tooltips" data-placement="top" data-original-title="Edit"><i class="fa fa-edit"></i></a>
                                    </div>
                                </td>
                                <td>
                                     @item.FoodType.Text                                    
                                </td>
                                <td>
                                    <a href="@Url.Action("Edit", "Food", new {Id = item.Id})">@item.Name</a>  
                                </td>
                                <td>
                                    <span class="pull-left">@item.DisplayName</span>
                                </td>
                                <td>
                                    <span class="pull-risht">@item.PortionSize</span>
                                </td> 
                                <td class="center">
                                  @item.RecordStatus.Text
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end: PAGE CONTENT-->