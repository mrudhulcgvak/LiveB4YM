@model ChangePasswordRequest

<!-- start: LOGIN BOX -->
<div class="box-forgot">
	<h3>Change Password to your account</h3>
	<p>
		Please enter your email and password to change.
	</p>
	<form class="form-login" method="POST" action="@Url.Action("ChangePassword","Account")">
	    <fieldset>
	        <div class="form-group">
	            <span class="input-icon">
                    @Html.TextBoxFor(m => m.UserName, new {@class = "form-control limited", type = "email", maxlength = 100,placeholder="Email"})
					<i class="fa fa-envelope"></i> 
                </span>
	        </div>
	        <div class="form-group form-actions">
	            <span class="input-icon">
					@Html.PasswordFor(model => model.Password, new {@class = "form-control",placeholder="Password"})
                    <i class="fa fa-lock"></i>
                </span>
	        </div>
	        <div class="form-group form-actions">
	            <span class="input-icon">
					@Html.PasswordFor(model => model.ConfirmPassword, new {@class = "form-control",placeholder="Confirm Password"})
                    <i class="fa fa-lock"></i>
                </span>
	        </div>
	        <div class="form-actions">
	            <button type="submit" class="btn btn-bricky pull-right">
	                Change Password <i class="fa fa-arrow-circle-right"></i>
	            </button>
	        </div>

	    </fieldset>
        @Html.HiddenFor(m=> m.ActivationCode)
	</form>
</div>
<!-- end: LOGIN BOX -->