@{
    var userTypeSelectListItems = Enum.GetValues(typeof(UserTypes)).Cast<UserTypes>().Select(
        x => new SelectListItem
                 {
                     Text = x.ToString(),
                     Value = ((int) x).ToString(System.Globalization.CultureInfo.InvariantCulture),
                     Selected = ((int) x) == Model
                 });
}
