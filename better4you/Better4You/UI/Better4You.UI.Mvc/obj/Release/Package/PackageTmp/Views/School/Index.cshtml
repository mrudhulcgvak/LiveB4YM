@model IEnumerable<Better4You.UserManagment.ViewModel.SchoolListItemView>
@{
    ViewBag.Title = "School Management";
}
<!-- start: PAGE HEADER -->
<div class="row">
	<div class="col-sm-12">
		<!-- start: PAGE TITLE & BREADCRUMB -->
	    <ol class="breadcrumb">
	        <li>
	            <i class="clip-home-3"></i>
	            <a href="#">
	                Home
	            </a>
	        </li>
	        <li class="active">
	            School Management
	        </li>
	    </ol>
	    <div class="row page-header">
	        <div class="col-sm-6">
	            <h1>
	                @ViewBag.Title
	            </h1>
	        </div>
	        <div class="col-sm-6">
	            <div class="buttons-widget pull-right">
	                <a class="btn btn-md btn-danger" href="@Url.Action("Edit", "School")">
	                    <i class="fa fa-plus"></i> Create
	                </a>
	            </div>
	        </div>
	    </div>
		<!-- end: PAGE TITLE & BREADCRUMB -->
	</div>
</div>
<!-- end: PAGE HEADER -->
<!-- start: PAGE CONTENT -->
<div class="row">
    <div class="col-md-12">
        <form class="form" method="POST">
            <!-- start: RESPONSIVE TABLE PANEL -->
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="fa fa-external-link-square"></i>
                    Search Criteria
                    <div class="panel-tools">
                        <a class="btn btn-xs btn-link panel-collapse collapses" href="#">
                        </a>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="table-responsive">
                                <table class="table table-condensed">
                                    <tr>
                                        <td class="col-sm-3">School Name</td>
                                        <td>
                                            @Html.TextBox("Name",Request["Name"],new{@class="form-control limited",maxlength="50",placeholder="School Name",id="Name" })
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            School Type
                                        </td>
                                        <td>
                                            @Html.DropDownList("SchoolTypeId", (IEnumerable<SelectListItem>) ViewBag.SchoolTypes, new {id = "SchoolTypeId",@class="form-control"})
                                        </td>
                                    </tr>
                                </table>
                            </div>

                        </div>
                        <div class="col-sm-4">
                            <div class="table-responsive">
                                <table class="table table-condensed">

                                    <tr>
                                        <td>
                                            Route
                                        </td>
                                        <td>
                                            @Html.TextBox("Route",Request["Route"],new{@class="form-control limited",maxlength="10",type="number",placeholder="Route",id="Route" })
                                        </td>
                                    </tr>

                                    <tr>
                                        <td>
                                            Code
                                        </td>

                                        <td>
                                            @Html.TextBox("Code",Request["Code"],new{@class="form-control limited",maxlength="5",type="number",placeholder="Code",id="Code" })
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="table-responsive">
                                <table class="table table-condensed">

                                    <tr>
                                        <td>
                                            Status
                                        </td>
                                        <td>
                                            @Html.DropDownList("RecordStatusId", (IEnumerable<SelectListItem>) ViewBag.RecordStatuses, new {id = "RecordStatusId",@class="form-control"})
                                        </td>
                                    </tr>

                                    <tr>
                                        <td colspan="2">
                                            <span class="pull-right">
                                            <button type="submit" class="btn btn-md btn-blue">Search</button>
                                            </span>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </form>
        <!-- start: RESPONSIVE TABLE PANEL -->
        <div class="panel panel-default">
            <div class="panel-heading">
                <i class="fa fa-external-link-square"></i>
                Search Result
                <div class="panel-tools">
                    <a class="btn btn-xs btn-link panel-collapse collapses" href="#">
                    </a>
                </div>
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover table-condensed">
                        <thead>
                        <tr>
                            <th class="center">...</th>
                            <th class="center">Code</th>
                            <th class="center">Type</th>
                            <th class="center">Name</th>
                            <th class="center">Address</th>
                            <th class="center col-sm-1">Business</th>
                            <th class="center col-sm-1">Cell</th>
                            <th class="center col-sm-1">Fax</th>
                            <th class="cente col-sm-2">Email</th>
                            <th class="center col-sm-1">Status</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="center">
                                    <div class="visible-md visible-lg hidden-sm hidden-xs">
                                        <a href="@Url.Action("Edit", "School", new {Id = item.Id})" class="btn btn-xs btn-teal tooltips" data-placement="top" data-original-title="Edit"><i class="fa fa-edit"></i></a>
                                    </div>
                                </td>
                                <td>
                                    <span class="pull-left">@item.Code</span>
                                </td>
                                <td>
                                    <span class="pull-left">@item.SchoolType</span>
                                </td>
                                <td>
                                    <a href='@Url.Action("Edit", "School", new {Id = item.Id})'>@item.Name</a>
                                </td>
                                <td>
                                    <span class="pull-left">@string.Format("{0} {1}", item.Address1, item.Address2) ,@item.ZipCode,/ @item.City, @item.FirstAdminDivision</span>
                                </td>
                                <td class="center">@item.BusinessPhone</td>
                                <td class="center">@item.CellPhone</td>
                                <td class="center">@item.Fax</td>
                                <td>@item.Email</td>
                                <td>@item.RecordStatus</td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end: PAGE CONTENT-->